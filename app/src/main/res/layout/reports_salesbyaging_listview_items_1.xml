            android:textSize="12sp" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="2dp"
        android:background="@color/line" >
    </RelativeLayout>

</LinearLayout>